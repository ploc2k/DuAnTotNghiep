<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:layout_width="@dimen/_150sdp"
        android:layout_height="@dimen/_150sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/imgBill"
        android:src="@drawable/purchase_order_480px" />

    <TextView
        android:id="@+id/tvId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_25sdp"
        android:text="ID"
        android:textSize="@dimen/_8sdp"
        app:layout_constraintEnd_toEndOf="@id/imgBill"
        app:layout_constraintHorizontal_bias="0.395"
        app:layout_constraintStart_toStartOf="@id/imgBill"
        app:layout_constraintTop_toTopOf="@id/imgBill" />

    <TextView
        android:id="@+id/tvBillCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_10sdp"
        android:textSize="@dimen/_8sdp"
        android:text="tv"
        android:layout_marginTop="@dimen/_25sdp"
        app:layout_constraintStart_toEndOf="@id/tvId"
        app:layout_constraintTop_toTopOf="@id/imgBill" />

    <TextView
        android:id="@+id/tvTable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_18sdp"
        android:text="Table"
        android:textSize="@dimen/_8sdp"
        app:layout_constraintEnd_toEndOf="@id/imgBill"
        app:layout_constraintHorizontal_bias="0.389"
        app:layout_constraintStart_toStartOf="@id/imgBill"
        app:layout_constraintTop_toTopOf="@id/tvId" />

    <TextView
        android:id="@+id/tvTableCode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/_8sdp"
        android:layout_marginTop="@dimen/_18sdp"
        android:layout_marginLeft="@dimen/_4sdp"
        app:layout_constraintStart_toEndOf="@id/tvTable"
        app:layout_constraintTop_toTopOf="@id/tvBillCode" />


    <TextView
        android:id="@+id/tvTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_19sdp"
        android:text="Total"
        android:textSize="@dimen/_8sdp"
        app:layout_constraintEnd_toEndOf="@id/imgBill"
        app:layout_constraintHorizontal_bias="0.38"
        app:layout_constraintStart_toStartOf="@id/imgBill"
        app:layout_constraintTop_toTopOf="@id/tvTable" />

    <TextView
        android:id="@+id/tvTotalPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_19sdp"
        android:textSize="@dimen/_8sdp"
        android:layout_marginLeft="@dimen/_4sdp"
        app:layout_constraintStart_toEndOf="@id/tvTable"
        app:layout_constraintTop_toTopOf="@id/tvTableCode" />


    <TextView
        android:id="@+id/tvS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_19sdp"
        android:text="Date"
        android:textSize="@dimen/_8sdp"
        app:layout_constraintEnd_toEndOf="@id/imgBill"
        app:layout_constraintHorizontal_bias="0.38"
        app:layout_constraintStart_toStartOf="@id/imgBill"
        app:layout_constraintTop_toTopOf="@id/tvTotal" />

    <TextView
        android:id="@+id/tvDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_19sdp"
        android:textSize="@dimen/_8sdp"
        android:layout_marginLeft="@dimen/_4sdp"
        app:layout_constraintStart_toEndOf="@id/tvTable"
        app:layout_constraintTop_toTopOf="@id/tvTotalPrice" />

    <TextView
        android:id="@+id/tvStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_14sdp"
        android:text="Chưa thanh toán"
        android:textColor="@color/tv_status_unpaid"
        android:textSize="@dimen/_12sdp"
        app:layout_constraintBottom_toBottomOf="@id/imgBill"
        app:layout_constraintEnd_toEndOf="@id/imgBill"
        app:layout_constraintHorizontal_bias="0.23"
        app:layout_constraintStart_toStartOf="@id/imgBill" />


</androidx.constraintlayout.widget.ConstraintLayout>